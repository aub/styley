%p
  = f.label :title, 'Title:'
  = f.text_field :title
%p
  = f.label :class_name, 'Class Name:'
  = f.text_field :class_name
%p
  = f.label :source_name, 'Data Source:'
  = f.select :source_name, DataSource.all.map { |ds| [ds.name, ds.name] }
%p
  = f.label :geometry_type, 'Geometry Type:'
  = f.select :geometry_type, %w(line point polygon).map { |type| [type, type] }
%p
  %table
    %tr
      %td= f.label :query, 'Query:'
      %td= f.text_area :query, :rows => 10, :cols => 100
